            </div>
            <div class="scroll">
                <form action="/getPost/<%= EditPost._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                  <label for="title">Title</label>
                    <input type="text" name="title" value="<%= EditPost.title %>" required>
                    <label for="title">Description</label>
                    <input type="text" name="title" value="<%= EditPost.title %>" required>

                    <label for="imageInput">Select Image:</label>
                    <img class="img" src="data:image/png;base64, <%= EditPost.image %>" alt="Current Image">
                    <input type="file" name="images" accept="image/*" required>
                    <p>Note: Upload square image for better enhancement.</p>
                    </div>
                    <button class="button"><a style="color: #fff; text-decoration: none;" href="/getAdminPost">Cancel</a></button>
                    <button class="button" type="submit">Submit</button>
              </form>
        </section>
